#! /usr/bin/env bash

if [ ! "$(grep -in "ENV_VARS_FILE=*" /etc/environment)" ]; then
    echo "Specify environment variables file by defining the environment variable 'export ENV_VARS_FILE=...' in /etc/environment"
    exit 0
else
    eval "$( grep "ENV_VARS_FILE=*" /etc/environment | xargs )"
fi

if [ ! -f "$ENV_VARS_FILE" ]; then
    echo "Environment variables file not found: '$ENV_VARS_FILE'"
    exit 0
fi

. "$ENV_VARS_FILE"
