#! /usr/bin/env bash
BASEDIR=$(dirname $0); cd $BASEDIR

. ../env-vars
require_var ZELDA64RECOMPILED_HOME
require_var ZELDA64RECOMPILED_SAVES_HOME
require_var ZELDA64RECOMPILED_BACKUP_HOME

rsync -cvrP $ZELDA64RECOMPILED_BACKUP_HOME $ZELDA64RECOMPILED_SAVES_HOME

cd $ZELDA64RECOMPILED_HOME

echo Launching 'Zelda 64: Recompiled' at "$ZELDA64RECOMPILED_HOME"
./Zelda64Recompiled

rsync -cvrP $ZELDA64RECOMPILED_SAVES_HOME $ZELDA64RECOMPILED_BACKUP_HOME

back
